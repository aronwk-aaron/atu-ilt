<form method=post>
  {{ form.csrf_token }}
  <div class="card shadow-sm mx-auto pb-3" style="width: 18rem;">
    <div class="card-body">
      {{ helper.render_field(form.species) }}
      {{ helper.render_field(form.species_type) }}
      {{ helper.render_field(form.classification) }}
      {{ helper.render_field(form.risk) }}
      {{ helper.render_field(form.group) }}
      {{ helper.render_submit_field(form.submit) }}
    </div>
  </div>
</form>
