<form method=post>
  {{ form.csrf_token }}
  <div class="card shadow-sm mx-auto pb-3" style="width: 18rem;">
    <div class="card-body">
      {{ helper.render_field(form.name) }}
      {{ helper.render_field(form.brand) }}
      {{ helper.render_checkbox_field(form.functional) }}
      {{ helper.render_field(form.comment) }}
      {{ helper.render_submit_field(form.submit) }}
    </div>
  </div>
</form>
