{% extends 'base.jinja2' %}

{% block title %}New Site{% endblock %}

{% block content_before %}

  <div class="jumbotron shadow-sm py-0">
    <div class="container">

      {# Text #}
      <div class="text-center">
        <span class="h3 mb-0"><br/>New Site<br/><br/></span>
      </div>
    </div>
  </div>

{% endblock %}

{% block content %}
    <form method=post>
      {{ form.csrf_token }}
      <div class="card shadow-sm pb-3">
        <div class="card-body">
          <div class="row mt-3">
            <div class="col text-right">
              Name:
            </div>
            <div class="col">
              {{ form.name }}
            </div>
          </div>
          <div class="row mt-3">
            <div class="col text-right">
              Location Type:
            </div>
            <div class="col">
              {{ form.loc_type }}
            </div>
          </div>
          <div class="row mt-3">
            <div class="col text-right">
              Elevation:
            </div>
            <div class="col">
              {{ form.elevation }} meters
            </div>
          </div>
          <div class="row mt-3">
            <div class="col text-right">
              Snag/Perch #:
            </div>
            <div class="col">
              {{ form.snag_perch }}
            </div>
          </div>
          <div class="row mt-3">
            <div class="col text-right">
              Primary Substrate:
            </div>
            <div class="col">
              {{ form.primary_substrate }}
            </div>
          </div>
          <div class="row mt-3">
            <div class="col text-right">
              Precentage Primary Substrate:
            </div>
            <div class="col">
              {{ form.precentage_primary_substrate }}
            </div>
          </div>
          <div class="row mt-3">
            <div class="col text-right">
              Substrate Range:
            </div>
            <div class="col">
              {{ form.silt_clay }} {{ form.silt_clay.label }}<br/>
              {{ form.sand }} {{ form.sand.label }}<br/>
              {{ form.gravel }} {{ form.gravel.label }}<br/>
              {{ form.sm_rocks }} {{ form.sm_rocks.label }}<br/>
            </div>
          </div>
          <div class="row mt-0">
            <div class="col text-right">
              Estimated Area: 
            </div>
            <div class="col">
              {{ form.est_area }} hectares
            </div>
          </div>
          <div class="row mt-3">
            <div class="col text-right">
              Length:
            </div>
            <div class="col">
              {{ form.length }} meters
            </div>
          </div>
          <div class="row mt-3">
            <div class="col text-right">
              Perimeter Taken:
            </div>
            <div class="col">
              {{ form.perimeter }}
            </div>
          </div>
          <div class="row mt-3">
            <div class="col text-right">
            Comment:
            </div>
            <div class="col">
              {{ form.comment }}
            </div>
          </div>
        </div>
      </div>
      <hr/>
      {{ helper.render_submit_field(form.submit, class='btn-block') }}
    </form>
{% endblock %}
