{% extends 'base.jinja2' %}

{% block title %}Site {{ site.name }}{% endblock %}

{% block content_before %}
  Site {{ site.name }}
{% endblock %}

{% block content %}
    <div class="card shadow-sm">
      <div class="card-header">
        Information About Site
      </div>
      <div class="card-body">
        <div class="row mt-3">
          <div class="col text-right">
            Location Type:
          </div>
          <div class="col">
            {{ site.loc_type }}
          </div>
        </div>
        <div class="row mt-3">
          <div class="col text-right">
            Elevation:
          </div>
          <div class="col">
            {{ site.elev }} meters
          </div>
        </div>
        <div class="row mt-3">
          <div class="col text-right">
            Snag/Perch #:
          </div>
          <div class="col">
            {{ site.snag_perch }}
          </div>
        </div>
        <div class="row mt-3">
          <div class="col text-right">
            Primary Substrate:
          </div>
          <div class="col">
            {{ site.psub }}
          </div>
        </div>
        <div class="row mt-3">
          <div class="col text-right">
            Precentage Primary Substrate:
          </div>
          <div class="col">
            {{ site.perc_psub }}
          </div>
        </div>
        <div class="row mt-3">
          <div class="col text-right">
            Substrate Range:
          </div>
          <h3 class="col">
            <span class="badge {% if site.silt_clay %} badge-primary {% else %} badge-white text-white {% endif %}">Silt/Clay</span>
            <span class="badge {% if site.sand %} badge-primary {% else %} badge-white text-white {% endif %}">Sand</span>
            <span class="badge {% if site.gravel %} badge-primary {% else %} badge-white text-white {% endif %}">Gravel</span>
            <span class="badge {% if site.sm_rocks %} badge-primary {% else %} badge-white text-white {% endif %}">Small Rocks</span>
          </h3>
        </div>
        <div class="row mt-0">
          <div class="col text-right">
            Estimated Area: 
          </div>
          <div class="col">
            {% if site.est_area %}
              {{ site.est_area }} hectares
            {% else %}
              No Data
            {% endif %}
          </div>
        </div>
        <div class="row mt-3">
          <div class="col text-right">
            Length:
          </div>
          <div class="col">
            {% if site.length %}
              {{ site.length }} meters
            {% else %}
              No Data
            {% endif %}
          </div>
        </div>
        <div class="row mt-3">
          <div class="col text-right">
            Perimeter Taken:
          </div>
          <div class="col">
            {% if site.perimeter %}
              <h4 class="far fa-check-square text-success"></h4>
            {% else %}
              <h4 class="far fa-times-circle text-danger"></h4>
            {% endif %}
          </div>
        </div>
        <div class="row mt-3">
          <div class="col text-right">
          Comment:
          </div>
          <div class="col">
            {{ site.comment }}
          </div>
        </div>
      </div>
    </div>
{% endblock %}
