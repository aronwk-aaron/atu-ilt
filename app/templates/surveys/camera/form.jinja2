<form method=post>
  {{ form.csrf_token }}
  <div class="card shadow-sm mx-auto pb-3" style="width: 18rem;">
    <div class="card-body">
      {{ helper.render_field(form.survey_id) }}
      {{ helper.render_field(form.camera) }}
      {{ helper.render_field(form.card_in) }}
      {{ helper.render_field(form.card_out) }}
      {{ helper.render_checkbox_field(form.cleared) }}
      {{ helper.render_checkbox_field(form.changed_battery) }}
      {{ helper.render_checkbox_field(form.functional) }}
      {{ helper.render_field(form.started_recording) }}
      {{ helper.render_field(form.stopped_recording) }}
      {{ helper.render_field(form.comment) }}
      {{ helper.render_submit_field(form.submit) }}
    </div>
  </div>
</form>
